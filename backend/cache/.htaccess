# Cache dizini - dışarıdan erişilemez
# Token cache dosyalarını korur

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule .* - [F,L]
</IfModule>

# Apache 2.4+
<IfModule mod_authz_core.c>
    Require all denied
</IfModule>

# Apache 2.2
<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
</IfModule>

# Dosya uzantılarına göre erişim engelleme
<FilesMatch "\.(cache|json|txt)$">
    Order deny,allow
    Deny from all
</FilesMatch>
