{
  "expo": {
    "name": "KulturaX",
    "slug": "kitapmuzikfilm",
    "scheme": "kitapmuzikfilm",
    "runtimeVersion": "1.0.0",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "newArchEnabled": true,
    "ios": {
      "googleServicesFile": "./GoogleService-Info.plist",
      "supportsTablet": true,
      "bundleIdentifier": "com.kitapmuzikfilm",
      "infoPlist": {
        "NSCameraUsageDescription": "Profil fotoğrafı ve gönderi için fotoğraf çekmek amacıyla kameranıza erişim izni gereklidir.",
        "NSMicrophoneUsageDescription": "Video kaydı yapmak için mikrofonunuza erişim izni gereklidir.",
        "NSPhotoLibraryUsageDescription": "Profil fotoğrafı ve gönderi eklemek için galerinize erişim izni gereklidir.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "buildNumber": "25"
    },
    "android": {
      "package": "com.anonymous.kitapmuzikfilm",
      "versionCode": 25,
      "softwareKeyboardLayoutMode": "resize"
    },
    "web": {},
    "extra": {
      "eas": {
        "projectId": "737ac828-d618-4700-a799-c0d71b68ba6b"
      }
    },
    "plugins": [
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-5897178396326522~6231785630",
          "iosAppId": "ca-app-pub-5897178396326522~2550479358"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          },
          "ios": {
            "deploymentTarget": "15.1",
            "extraPods": [
              {
                "name": "FirebaseCoreInternal",
                "modular_headers": true
              },
              {
                "name": "GoogleUtilities",
                "modular_headers": true
              },
              {
                "name": "FirebaseCore",
                "modular_headers": true
              }
            ]
          }
        }
      ]
    ],
    "experiments": {
      "autolinkingModuleResolution": true
    }
  }
}